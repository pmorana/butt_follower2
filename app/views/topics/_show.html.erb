<div>
<h2>Comments</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= :username %></th>
      <th><%= :body %></th>
    </tr>
  </thead>
  
  <tbody>
    <% @user.topics[0..-2].each do |topic| %>
      <tr>
        <td><%=@user.username%>: </td>
        <td><%=topic.body%></td>
     
        <td><%= link_to like_user_topic_path(@user, topic), method: :put, class: "btn btn-default btn-sm" do %>
          <span class="glyphicon glyphicon-chevron-up"></span>
          Upvote
          <%= topic.get_upvotes.size %>
          <% end %>
        <%= link_to dislike_user_topic_path(@user, topic), method: :put, class: "btn btn-default btn-sm" do %>
          <span class="glyphicon glyphicon-chevron-down">
          Downvote
          <%= topic.get_downvotes.size %>
        <% end %>
        </td>
        <td>
        <% if topic.user == current_user -%>
          <div class="btn-group">
          <%= link_to 'Edit', edit_user_topic_path(@user, topic), class: "btn btn-default" %>
          <%= link_to 'Destroy', user_topic_path(@user, topic), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
          </div>
        <% end %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
</div>