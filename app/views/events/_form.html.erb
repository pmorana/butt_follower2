<%= form_for ([@subscription, @subscription.events.build]), :html => { :class => 'form-horizontal form-model' } do |f| %>  
  <div class="form-group">
    <%= f.label :event_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :event_name, :class => 'text-field form-control' %>
    </div>   
    <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit :class => 'btn btn-primary' %>
      </div>
  </div>
<% end %>
